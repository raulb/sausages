{
  "name": "sausages",
  "description": "An API for all your favorite sausages",
  "env": {
    "LANG": "en_US.UTF-8"
  },
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ],
  "scripts": {
    "test-setup": "bundle install --with test",
    "test": "bundle exec rake"
  },
  "addons": [
    {
      "plan": "deployhooks",
      "options": {
        "ephemeral": true
      }
    }
  ]
}
